yn () {
	while true; do
		read -p "$1 " yn
			case $yn in
			[Yy]* ) return 0;;
	[Nn]* ) return 1;;
	* ) echo "Please answer yes or no.";;
	esac
		done
}

if [ -z "$1" ] || [ -z "$2" ]; then
	printf "Usage $0 <package atom> <use flags>\n"
	exit -1
fi

FILE='/etc/portage/package.use'

printf ">=" >> $FILE
for arg in "$*"; do printf "$arg" >> $FILE; done
printf "\n" >> $FILE
